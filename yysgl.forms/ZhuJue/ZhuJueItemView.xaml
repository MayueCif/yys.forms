<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="yysgl.forms.ZhuJueItemView">
	<Grid RowSpacing="1" ColumnSpacing="1">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Image x:Name="image" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
		<Label x:Name="title" TextColor="Black" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalOptions="Center"/>
		<Button x:Name="button1" Grid.Row="2" Grid.Column="0" Text="简介" Margin="0"/>
		<Button x:Name="button2" Grid.Row="2" Grid.Column="1" Text="技能" Margin="0"/>
		<Button x:Name="button3" Grid.Row="2" Grid.Column="2" Text="视频" Margin="0"/>
	</Grid>
</ContentView>
